@{
    ViewData["Title"] = "About - Trainfy";
    Layout = "_MyLayout";
}

<!-- About Hero Section -->
<section class="about-hero-section position-relative overflow-hidden py-5" style="background: linear-gradient(135deg, #764ba2 0%, #667eea 100%); min-height: 60vh; display: flex; align-items: center;">
    <div class="container position-relative" style="z-index: 2;">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-4 mb-lg-0">
                <h1 class="display-3 fw-bold text-white mb-3" style="text-shadow: 0 4px 20px rgba(0,0,0,0.2);">About <span class="text-warning">Trainfy</span></h1>
                <p class="lead text-white-50 mb-4" style="font-size: 1.25rem;">Empowering education with technology, innovation, and a passion for learning. Discover our mission, vision, and the values that drive us to deliver the best academy management experience.</p>
                <a href="/Course/Index" class="btn btn-warning btn-lg rounded-pill px-5 fw-semibold shadow">Explore Courses</a>
            </div>
            <div class="col-lg-5 text-center">
                <img src="/Trainfy.png" alt="About Trainfy" class="img-fluid rounded-4 shadow-lg" style="max-height: 320px; background: rgba(255,255,255,0.1);">
            </div>
        </div>
    </div>
</section>

<!-- Mission, Vision, Values Section -->
<section class="py-5" style="background: #f8fafc;">
    <div class="container py-5">
        <div class="row text-center mb-5">
            <div class="col-lg-4 mb-4 mb-lg-0">
                <div class="p-4 bg-white rounded-4 shadow-sm h-100">
                    <i class="bi bi-bullseye text-primary fs-1 mb-3"></i>
                    <h4 class="fw-bold mb-2">Our Mission</h4>
                    <p class="text-muted mb-0">To revolutionize education management by providing intuitive, powerful, and accessible tools for institutions, instructors, and learners worldwide.</p>
                </div>
            </div>
            <div class="col-lg-4 mb-4 mb-lg-0">
                <div class="p-4 bg-white rounded-4 shadow-sm h-100">
                    <i class="bi bi-eye text-success fs-1 mb-3"></i>
                    <h4 class="fw-bold mb-2">Our Vision</h4>
                    <p class="text-muted mb-0">To be the leading platform that bridges technology and education, fostering growth, collaboration, and lifelong learning for all.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="p-4 bg-white rounded-4 shadow-sm h-100">
                    <i class="bi bi-heart-fill text-danger fs-1 mb-3"></i>
                    <h4 class="fw-bold mb-2">Our Values</h4>
                    <p class="text-muted mb-0">Innovation, integrity, inclusivity, and a relentless pursuit of excellence in everything we do for our community.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Team Section -->
<section class="py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold text-dark mb-3">Meet Our Team</h2>
            <p class="lead text-muted mx-auto" style="max-width: 600px;">A passionate group of developers and innovators dedicated to transforming the learning experience.</p>
        </div>
        <div class="row g-4 justify-content-center">
            <div class="col-md-4 col-lg-3">
                <div class="team-card bg-white rounded-4 shadow-sm text-center p-4 h-100">
                    <img src="/A_logo.png" alt="Team Member" class="rounded-circle mb-3 shadow" style="width: 100px; height: 100px; object-fit: cover;">
                    <h5 class="fw-bold mb-1">Ahmed Alian</h5>
                    <p class="text-muted mb-2">Founder & Lead Developer</p>
                    <div class="d-flex justify-content-center gap-2">
                        <a href="https://linkedin.com/in/AhmedAlian7" class="text-primary"><i class="bi bi-linkedin"></i></a>
                        <a href="https://github.com/AhmedAlian7" class="text-dark"><i class="bi bi-github"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Platform Features Section -->
<section class="py-5" style="background: #f8fafc;">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold text-dark mb-3">Why Choose Trainfy?</h2>
            <p class="lead text-muted mx-auto" style="max-width: 600px;">Our platform is designed to empower every aspect of your academy with modern, secure, and scalable solutions.</p>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="feature-card bg-white rounded-4 p-4 shadow-sm h-100">
                    <i class="bi bi-shield-lock text-primary fs-2 mb-3"></i>
                    <h5 class="fw-bold mb-2">Enterprise Security</h5>
                    <p class="text-muted mb-0">Your data is protected with industry-leading security and privacy standards.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="feature-card bg-white rounded-4 p-4 shadow-sm h-100">
                    <i class="bi bi-lightning-charge text-warning fs-2 mb-3"></i>
                    <h5 class="fw-bold mb-2">Lightning Fast</h5>
                    <p class="text-muted mb-0">Enjoy seamless performance and instant access to all features, anytime, anywhere.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="feature-card bg-white rounded-4 p-4 shadow-sm h-100">
                    <i class="bi bi-people text-success fs-2 mb-3"></i>
                    <h5 class="fw-bold mb-2">Community Driven</h5>
                    <p class="text-muted mb-0">We listen to our users and continuously improve based on your feedback.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="cta-section py-5 position-relative overflow-hidden" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container py-5 position-relative">
        <div class="text-center text-white">
            <h2 class="display-4 fw-bold mb-4">Join the Trainfy Community</h2>
            <p class="lead mb-5 mx-auto" style="max-width: 600px;">Experience the future of education management. Start your journey with us today!</p>
            <a href="/Account/Register" class="btn btn-light btn-lg px-5 py-3 rounded-pill fw-semibold">
                <i class="bi bi-person-plus me-2"></i>Get Started
            </a>
        </div>
    </div>
</section>

<!-- Custom CSS for About Page -->
@section Styles {
    <style>
        .about-hero-section {
            will-change: transform;
        }
        .team-card {
            transition: box-shadow 0.3s, transform 0.3s;
        }
        .team-card:hover {
            box-shadow: 0 10px 32px rgba(102, 126, 234, 0.15) !important;
            transform: translateY(-6px) scale(1.03);
        }
        .feature-card {
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid transparent;
        }
        .feature-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 20px 40px rgba(0,0,0,0.1) !important;
            border-color: rgba(102, 126, 234, 0.2);
        }
    </style>
}
